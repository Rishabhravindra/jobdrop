extends layout

block content
  .reg-container.container
    h1.h1-responsive.text-xs-center Sign Up
    form#registerForm.reg-form.py-1(method='POST' action='/register')
      .form-inline
        .md-form.form-group
          input#email.has-success.form-control(type='email', name='email', onchange="validateEmail()", data-toggle="tooltip", data-placement="top", title="Enter a UC mail address")
          |  
          label(for='email' ) Email Address
        .md-form.form-group
          input#name.form-control(type='text', name='name')
          |  
          label(for='name') Name
      .form-inline
        .md-form.form-group
          input#password.form-control(type='password', name='password', onchange="validatePassword()",  data-toggle="tooltip" data-placement="top" title="minimum 8 characters")
          |  
          label(for='password') Create Password
        .md-form.form-group
          input#confirmPwd.form-control(type='password', name='confirmPwd', onchange="confirmPassword()")
          |  
          label(for='confirmPwd') Re-enter password
      .md-form.form-group
        h6 Enter what you need help with (Eg: #design)
        #tags.chips.chips-placeholder(name = 'tags')
        |
        input.dataChip(name='chips', value='Apple,Hello,World')
        |  
        button.btn.btn-primary.btn-submit.pt-1.float-sm-right.waves-effect.waves-light(type='submit') Submit

        
